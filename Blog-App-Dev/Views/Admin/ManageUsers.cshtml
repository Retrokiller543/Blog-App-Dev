@model IEnumerable<UserViewModel>


@{
    ViewBag.Title = "Manage Users";
}

<h1>Manage Users</h1>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRoles in Model)
        {
            <tr>
                <td>@userRoles.User.Email</td>
                <td>@string.Join(", ", userRoles.Roles)</td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = userRoles.User.Id })">Edit</a> |
                    <a href="@Url.Action("DeleteUser", new { id = userRoles.User.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
